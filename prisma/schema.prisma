datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  auth0Sub  String     @unique
  avatarUrl String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  profile   Profile?
  roles     UserRole[]

  @@index([email])
  @@index([auth0Sub])
}

model Profile {
  userId     String   @id
  firstName  String?
  lastName   String?
  phone      String?
  bio        String?

  country    String?
  city       String?
  state      String?
  postalCode String?
  taxId      String?

  // Redes sociales en JSON (simple y flexible)
  social     Json?

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Role {
  id          Int        @id @default(autoincrement())
  name        String     @unique   // 'ADMIN', 'VIEWER', ...
  description String?
  users       UserRole[]
}

model UserRole {
  userId     String
  roleId     Int
  assignedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
  @@index([roleId])
}
